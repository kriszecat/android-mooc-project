<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/leisure_medium</item>
        <item name="colorPrimaryDark">@color/leisure_dark</item>
    </style>

    <!-- Main activity theme. -->
    <style name="LeisureTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Leisure.NoTitle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:datePickerStyle">@style/datePickerStyle</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
    </style>

    <!-- Main activity action bar styles -->
    <style name="ActionBar.Solid.Leisure.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome</item>
        <!-- TODO drawable logo -->
        <!-- item name="displayOptions">useLogo|showHome</item -->
        <!--item name="logo">@drawable/ic_logo</item -->
    </style>

    <!-- Stub style for search results list view -->
    <style name="EventResultsListStyle"/>

    <style name="spinnerItemStyle">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
        <item name="android:background">@color/leisure_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
        <item name="android:background">@color/leisure_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="datePickerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
        <item name="android:background">@color/leisure_light</item>
    </style>

    <style name="buttonStyle">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
        <item name="android:background">@color/leisure_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewStyle">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif-condensed"</item>
    </style>

</resources>